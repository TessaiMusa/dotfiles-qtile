<eww>
	<definitions>
		<def name="player">
			<box orientation="h" space-evenly="false">
				<box class="musicart" style="background-image: url('{{music-cover}}');">{{music-art}}</box>
				<box orientation="v" space-evenly="true">
					<box class="musictitle">{{music-title}}</box>
					<box class="musicartist">{{music-artist}}</box>
					<box orientation="h" space-evenly="true">
						<button onclick="playerctl previous"></button>
						<button onclick="playerctl play-pause">{{music-playpause}}</button>
						<button onclick="playerctl next"></button>
					</box>
				</box>
			</box>
		</def>
	</definitions>

	<variables>
		<script-var name="music-art" interval="5s">~/.config/eww/scripts/getart.fish</script-var>
		<script-var name="music-cover" interval="5s">~/.config/eww/scripts/echoart.fish</script-var>

		<script-var name="music-title" interval="5s">playerctl metadata --format '{{title}}' </script-var>
		<script-var name="music-artist" interval="5s">playerctl metadata --format '{{artist}}' </script-var>
		<script-var name="music-plaupause" interval="1s"> </script-var>
	</variables>
	
	<windows>
		<window name="player" stacking="bg">
      		<geometry x="10px" y="270px" width="150px" height="100px"/>
      		<widget>
				<player/>
			</widget>
		</window>

	</windows>

</eww>
