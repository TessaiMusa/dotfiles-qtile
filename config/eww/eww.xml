<eww>

	<definitions>
		<def name="player">
			<box orientation="h" space-evenly="false">
				<box class="musicart" style="background-image: url('{{music-cover}}')">{{music-art}}</box>
			</box>
		</def>
	</definitions>

	<variables>
		<script-var name="music-art" interval="5s">~/.config/eww/scripts/getart.fish</script-var>
		<var name="music-cover">/tmp/eww/cover/cover.png</var>
	</variables>
	
	<windows>
		<window name="player" stacking="bg">
      		<geometry x="10px" y="270px" width="300px" height="110px"/>
      		<widget>
				<player/>
			</widget>
		</window>

	</windows>

</eww>
